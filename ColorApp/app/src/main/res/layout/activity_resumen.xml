<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    tools:context=".controllers.Resumen"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/button2"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/botonhome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPalabrasIncorrectas" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="218dp"
        android:layout_height="52dp"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/resultadonombre"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/palabrascorrectas"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/palabrasincorrectas"
        app:layout_constraintBottom_toTopOf="@+id/txtPalabrasIncorrectas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtPalabrasCorrectas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtPalabrasIncorrectas"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</android.support.constraint.ConstraintLayout>