<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caucaragp.worldskills.colorapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconoappx144"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconoappx144"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".controllers.Splash" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.Menu" android:screenOrientation="portrait" />
        <activity android:name=".controllers.Juego" android:screenOrientation="portrait" />
        <activity android:name=".controllers.Configuracion" android:screenOrientation="portrait" />
        <activity android:name=".controllers.Puntuacion" android:screenOrientation="portrait" />
        <activity android:name=".controllers.Resumen" android:screenOrientation="portrait" />
        <activity android:name=".controllers.JuegoC" android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>